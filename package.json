{
    "name": "mcp-jupyter",
    "displayName": "MCP Jupyter",
    "description": "An AI-augmented Jupyter Notebook experience.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.64.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "mcp-jupyter.quickStart",
                "title": "MCP Jupyter: Quick Start"
            },
            {
                "command": "mcp-jupyter.clearSnapshots",
                "title": "MCP Jupyter: Clear All Session Snapshots"
            },
            {
                "command": "mcp-jupyter.saveSnapshot",
                "title": "MCP Jupyter: Save Session Snapshot"
            }
        ],
        "notebookKernelProviders": [
            {
                "id": "mcp-kernel",
                "displayName": "MCP Kernel",
                "notebookType": "mcp-jupyter-notebook"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mcp-jupyter-sidebar",
                    "title": "MCP Jupyter",
                    "icon": "./media/icon.svg"
                }
            ]
        },
        "views": {
            "mcp-jupyter-sidebar": [
                {
                    "id": "mcp-jupyter-snapshots",
                    "name": "Snapshots",
                    "type": "tree"
                }
            ]
        },
        "configuration": {
            "title": "MCP Jupyter",
            "properties": {
                "mcp-jupyter.snapshotStoragePath": {
                    "type": "string",
                    "default": ".mcp/snapshots.sqlite",
                    "description": "Path to the snapshot database file. Can be an absolute path or a path relative to the workspace root."
                }
            }
        }
    }
}
